extends ../layout

block content
  body.dashboard-layout

    // Sidebar
    aside.sidebar
      .logo-container
        img(src="/img/DienteLogin1.png", alt="Logo", class="logo-icon")
        span.logo-text Beauty Smile
      ul.menu
        li: a(href="/dashboard") 🏠 Panel
        li: a(href="/dentistas") 🦷 Dentistas
        li: a(href="/servicios") 💼 Servicios
        li: a(href="/pacientes") 👨‍⚕️ Pacientes
        li: a(href="/citas") 📅 Citas
        li: a(href="/historial") 📝 Historial
        li: a(href="/logout" class="btn-reject") 🔒 Cerrar sesión

    main.main-content
      h1 Dentistas Disponibles

      .action-buttons
        a.btn.btn-secondary(href="/dashboard") Volver al panel
        a.btn.btn-primary(href="/dentistas/nuevo") Registrar nuevo dentista

      .card-grid
        if dentistas.length
          each dentista in dentistas
            .dentista-card
              h2 🦷 #{dentista.nombre_completo}
              p Especialidad: #{dentista.especialidad}
              p 📞 #{dentista.telefono}
              p ✉️ #{dentista.correo}
              a.btn.btn-primary(href=`/dentistas/agendar/${dentista.id}`) Agendar Cita
        else
          p.text-muted No hay dentistas registrados.
