extends ../layout

block content
  - ocultarHeader = true
  - esDashboard = true

  body.dashboard-layout
    // Sidebar
    aside.sidebar
      .logo-container
        img(src="/img/DienteLogin1.png", alt="Logo", class="logo-icon")
        span.logo-text Beauty Smile
      ul.menu
        li: a(href="/dashboard") 🏠 Panel
        li: a(href="/dentistas") 🦷 Dentistas
        li: a(href="/servicios") 💼 Servicios
        li: a(href="/pacientes") 👨‍⚕️ Pacientes
        li: a(href="/citas") 📅 Citas
        li: a(href="/historial") 📝 Historial
        li: a(href="/logout" class="btn-reject") 🔒 Cerrar sesión

    main.main-content
      .form-container-dentista
        h1 Registrar Nuevo Dentista
        if error
          p.error-message #{error}
        form(method="POST")
          .form-dentista-row
            .form-dentista-col
              label(for="nombre_completo") Nombre completo
              input(type="text", id="nombre_completo", name="nombre_completo", required)
              label(for="especialidad") Especialidad
              select(id="especialidad", name="especialidad", required)
                option(value="Ortodoncia") Ortodoncia
                option(value="Endodoncia") Endodoncia
                option(value="Periodoncia") Periodoncia
                option(value="Implantes") Implantes
                option(value="Estética") Estética
                option(value="General") General
            .form-dentista-col
              label(for="telefono") Teléfono
              input(type="text", id="telefono", name="telefono", required)
              label(for="correo") Correo
              input(type="email", id="correo", name="correo", required)
          .action-buttons-form
            a.btn.btn-secondary(href="/dentistas") Volver a la lista
            button.btn.btn-primary(type="submit") Registrar Dentista