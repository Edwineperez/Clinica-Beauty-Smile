extends ../layout

block content

  body.dashboard-layout

    // Sidebar
    aside.sidebar
      .logo-container
        img(src="/img/DienteLogin1.png", alt="Logo", class="logo-icon")
        span.logo-text Beauty Smile
      ul.menu
        li: a(href="/dashboard") 🏠 Panel
        li: a(href="/dentistas") 🦷 Dentistas
        li: a(href="/servicios") 💼 Servicios
        li: a(href="/pacientes") 👨‍⚕️ Pacientes
        li: a(href="/citas") 📅 Citas
        li: a(href="/historial") 📝 Historial
        li: a(href="/logout" class="btn-reject") 🔒 Cerrar sesión

  // Ejemplo de estructura para views/citas/agendar.pug
  .form-container-agendar
    h1 Agendar Cita
    if error
      p.error-message #{error}
    form(method="POST")
      .form-agendar-row
        .form-agendar-col
          label(for="paciente") Paciente
          select(name="paciente", id="paciente", required)
            //- opciones de pacientes aquí
          label(for="fecha_cita") Fecha y hora
          input(type="datetime-local", name="fecha_cita", id="fecha_cita", required)
          label(for="motivo") Motivo
          textarea(name="motivo", id="motivo")
        .form-agendar-col
          label(for="dentista") Dentista
          select(name="dentista", id="dentista", required)
            //- opciones de dentistas aquí
          label(for="tipo_procedimiento") Procedimiento
          input(type="text", name="tipo_procedimiento", id="tipo_procedimiento")
          label(for="estado") Estado
          select(name="estado", id="estado")
            option(value="Programada") Programada
            option(value="Confirmada") Confirmada
            option(value="Completada") Completada
            option(value="Cancelada") Cancelada
      .action-buttons-form
        a.btn.btn-secondary(href="/dentistas") Volver a Dentistas
        button.btn.btn-primary(type="submit") Agendar Cita