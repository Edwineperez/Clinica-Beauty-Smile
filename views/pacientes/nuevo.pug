extends ../layout

block content
  - ocultarHeader = true
  - esDashboard = true

  body.dashboard-layout
    // Sidebar
    aside.sidebar
      .logo-container
        img(src="/img/DienteLogin1.png", alt="Logo", class="logo-icon")
        span.logo-text Beauty Smile
      ul.menu
        li: a(href="/dashboard") 🏠 Panel
        li: a(href="/dentistas") 🦷 Dentistas
        li: a(href="/servicios") 💼 Servicios
        li: a(href="/pacientes") 👨‍⚕️ Pacientes
        li: a(href="/citas") 📅 Citas
        li: a(href="/historial") 📝 Historial
        li: a(href="/logout" class="btn-reject") 🔒 Cerrar sesión

    main.main-content
      .form-container-paciente
        h1 Nuevo Paciente
        if error
          p.error-message #{error}
        form(method="POST")
          .form-row
            .form-col
              label Nombre completo:
              input(type="text", name="nombre_completo", required)
              label Documento de identidad:
              input(type="text", name="documento_identidad", required)
              label Teléfono:
              input(type="text", name="telefono")
              label Teléfono de emergencia:
              input(type="text", name="telefono_emergencia")
              label Correo:
              input(type="email", name="correo")
              label Dirección:
              textarea(name="direccion")
            .form-col
              label Fecha de nacimiento:
              input(type="date", name="fecha_nacimiento")
              label Género:
              select(name="genero")
                option(value="Masculino") Masculino
                option(value="Femenino") Femenino
                option(value="Otro") Otro
              label Alergias:
              textarea(name="alergias")
              label Antecedentes médicos:
              textarea(name="antecedentes_medicos")
          .action-buttons-form
            button.btn.btn-primary(type="submit") Guardar
            a.btn.btn-secondary(href="/pacientes") Cancelar

