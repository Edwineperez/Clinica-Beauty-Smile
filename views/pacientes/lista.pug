extends ../layout

block content
  - ocultarHeader = true
  - esDashboard = true

  body.dashboard-layout
    aside.sidebar
      .logo-container
        img(src="/img/DienteLogin1.png", alt="Logo", class="logo-icon")
        span.logo-text Beauty Smile
      ul.menu
        li: a(href="/dashboard") 🏠 Panel
        li: a(href="/dentistas") 🦷 Dentistas
        li: a(href="/servicios") 💼 Servicios
        li: a(href="/pacientes") 👨‍⚕️ Pacientes
        li: a(href="/citas") 📅 Citas
        li: a(href="/historial") 📝 Historial
        li: a(href="/logout" class="btn-reject") 🔒 Cerrar sesión

    main.main-content
      .pacientes-container
        .pacientes-header
          h1 Pacientes
          .action-buttons
            a.btn.btn-primary(href="/pacientes/nuevo") + Nuevo Paciente

        .table-container
          table.pacientes-table
            thead
              tr
                th Nombre
                th Documento
                th Teléfono
                th Correo
                th Fecha Nacimiento
            tbody
              if pacientes.length
                each paciente in pacientes
                  tr
                    td= paciente.nombre_completo
                    td= paciente.documento_identidad
                    td= paciente.telefono
                    td= paciente.correo
                    td= paciente.fecha_nacimiento
              else
                tr
                  td(colspan="5") No hay pacientes registrados.