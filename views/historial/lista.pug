extends ../layout

block content
  - ocultarHeader = true
  - esDashboard = true

  body.dashboard-layout
    aside.sidebar
      .logo-container
        img(src="/img/DienteLogin1.png", alt="Logo", class="logo-icon")
        span.logo-text Beauty Smile
      ul.menu
        li: a(href="/dashboard") 🏠 Panel
        li: a(href="/dentistas") 🦷 Dentistas
        li: a(href="/servicios") 💼 Servicios
        li: a(href="/pacientes") 👨‍⚕️ Pacientes
        li: a(href="/citas") 📅 Citas
        li: a(href="/historial") 📝 Historial
        li: a(href="/logout" class="btn-reject") 🔒 Cerrar sesión

    main.main-content
      .historial-container
        .historial-header
          h1 Historial Clínico
          .action-buttons
            a.btn.btn-primary(href="/historial/nuevo") + Nuevo Historial

        .table-container
          table.historial-table
            thead
              tr
                th Paciente
                th Fecha
                th Odontólogo
                th Diagnóstico
                th Tratamiento
            tbody
              if historiales.length
                each h in historiales
                  tr
                    td= h.paciente
                    td= h.fecha
                    td= h.odontologo
                    td= h.diagnostico
                    td= h.tratamiento
              else
                tr
                  td(colspan="5") No hay historiales registrados.